<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_navigation_graph.xml"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.android.bluetoothmusic.fragment.authenticate.SplashScreenFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_splash_screen" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.android.bluetoothmusic.fragment.authenticate.LoginFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.android.bluetoothmusic.fragment.authenticate.RegisterFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.android.bluetoothmusic.fragment.authenticate.ForgotPasswordFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.android.bluetoothmusic.fragment.dashboard.DashboardFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_dashboard" />

</navigation>