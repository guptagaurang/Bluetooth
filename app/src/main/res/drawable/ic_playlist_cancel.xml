<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E91E63" />
            <stroke android:width="1dp" android:color="#61001F" />
            <padding android:bottom="@dimen/padding_spacing_10" android:left="@dimen/padding_spacing_10" android:right="@dimen/padding_spacing_10" android:top="@dimen/padding_spacing_10" />
        </shape>

    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#A83A59" android:startColor="#97153E" />
            <stroke android:width="1dp" android:color="#61001F" />
            <padding android:bottom="@dimen/padding_spacing_10" android:left="@dimen/padding_spacing_10" android:right="@dimen/padding_spacing_10" android:top="@dimen/padding_spacing_10" />
        </shape>
    </item>

</selector>