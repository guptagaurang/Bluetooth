<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#21D3D1" />
            <stroke android:width="1dp" android:color="#006160" />
            <corners android:radius="5dp" />
            <padding android:bottom="@dimen/padding_spacing_10" android:left="@dimen/padding_spacing_10" android:right="@dimen/padding_spacing_10" android:top="@dimen/padding_spacing_10" />
        </shape>

    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#3AA8A7" android:startColor="#159795" />
            <stroke android:width="1dp" android:color="#006160" />
            <corners android:radius="5dp" />
            <padding android:bottom="@dimen/padding_spacing_10" android:left="@dimen/padding_spacing_10" android:right="@dimen/padding_spacing_10" android:top="@dimen/padding_spacing_10" />
        </shape>
    </item>

</selector>