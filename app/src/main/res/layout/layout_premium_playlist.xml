<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/width_10"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/width_10"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_5">

        <com.android.bluetoothmusic.widgets.EllipsizeTextView
            android:id="@+id/monthPremiumButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/ic_premium_playlist"
            android:text="3 months free"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.android.bluetoothmusic.widgets.EllipsizeTextView
            android:id="@+id/individual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="@string/individual"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monthPremiumButton" />

        <com.android.bluetoothmusic.widgets.EllipsizeTextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="$ 3.33/month after offer period"
            android:textColor="@color/colorBlack"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/individual" />

        <com.android.bluetoothmusic.widgets.EllipsizeTextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="1 account"
            android:textColor="@color/colorBlack"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/month" />

        <View
            android:id="@+id/group_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/colorGray"

            app:layout_constraintTop_toBottomOf="@+id/account" />

        <com.android.bluetoothmusic.widgets.EllipsizeTextView
            android:id="@+id/listen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="Listen to music ad free"
            android:textColor="@color/colorBlack"

            app:layout_constraintTop_toBottomOf="@+id/group_divider" />

        <com.android.bluetoothmusic.widgets.EllipsizeTextView
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="Play anywhere - even offline"
            android:textColor="@color/colorBlack"

            app:layout_constraintTop_toBottomOf="@+id/listen" />

        <com.android.bluetoothmusic.widgets.EllipsizeTextView
            android:id="@+id/playback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="On Demand playback"
            android:textColor="@color/colorBlack"

            app:layout_constraintTop_toBottomOf="@+id/play" />

        <com.android.bluetoothmusic.widgets.EllipsizeTextView
            android:id="@+id/individualButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/ic_premium_playlist_button"
            android:gravity="center"
            android:text="Get Individual"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playback"
            app:layout_constraintBottom_toTopOf="@+id/description"/>

        <com.android.bluetoothmusic.widgets.EllipsizeTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="$ 3.33/month after offer period"
            android:textColor="@color/colorBlack"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>