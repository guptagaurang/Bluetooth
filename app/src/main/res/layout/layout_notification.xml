<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <TextView
        android:id="@+id/titleSongPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recently_played"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/titleSongPlaylist"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previousMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            tools:background="@drawable/ic_media_player"
            android:src="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/backwardMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            tools:background="@drawable/ic_media_player"
            android:src="@drawable/ic_backward"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/playMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            tools:background="@drawable/ic_media_player"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/pauseMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            tools:background="@drawable/ic_media_player"
            android:src="@drawable/ic_pause" />

        <ImageView
            android:id="@+id/forwardMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            tools:background="@drawable/ic_media_player"
            android:src="@drawable/ic_forward"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/nextMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            tools:background="@drawable/ic_media_player"
            android:src="@drawable/ic_next" />

        <ImageView
            android:id="@+id/cancelMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            tools:background="@drawable/ic_media_player"
            android:src="@drawable/ic_close" />

    </LinearLayout>

</RelativeLayout>